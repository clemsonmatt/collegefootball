{% extends 'CollegeFootballAppBundle:Manage:layout.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-heading">
            People
        </div>
        <table class="table table-striped table-hover">
            <thead>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Username</th>
                <th>Email</th>
                <th>Team</th>
            </thead>
            {% for person in people %}
                <tr class="table-click" data-url="{{ path('collegefootball_person_show', {'username': person.username}) }}">
                    <td>{{ person.firstName }}</td>
                    <td>{{ person.lastName }}</td>
                    <td>{{ person.username }}</td>
                    <td>{{ person.email|default('&mdash;')|raw }}</td>
                    <td>{{ person.team|default('&mdash;')|raw }}</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
