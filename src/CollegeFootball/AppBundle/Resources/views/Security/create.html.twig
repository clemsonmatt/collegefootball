{% extends 'CollegeFootballAppBundle:Security:layout.html.twig' %}

{% block content %}
    <div class="container">
        <div style="margin-top: 2%;">
            <div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6 panel panel-default" style="padding-top: 20px;">
                <legend><h4>Create Account</h4></legend>
                {{ form_start(form, {'attr': {'class': 'form-signin'}}) }}
                    {{ form_row(form.firstName) }}
                    {{ form_row(form.lastName) }}
                    {{ form_row(form.email) }}
                    <hr>
                    {{ form_rest(form) }}

                    <button type="submit" class="btn btn-primary btn-block">
                        {{ icon('log-in') }}
                        Create
                    </button>
                    <br>
                    <a href="{{ path('collegefootball_security_login') }}">
                        I already have an account
                    </a>
                {{ form_end(form) }}
                <br>
            </div>
        </div>
    </div>
{% endblock %}
