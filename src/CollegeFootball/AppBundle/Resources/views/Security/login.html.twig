{% extends 'CollegeFootballAppBundle:Security:layout.html.twig' %}

{% block content %}
    <div class="container">
        <div style="margin-top: 5%;">
            <center>
                <img src="{{ asset('bundles/collegefootballapp/images/espnCollegeFootballLogo.png') }}" style="max-width: 15%; margin-bottom: 20px;">
            </center>
            <!-- login -->
            <div class="col-md-offset-4 col-md-4 col-sm-offset-3 col-sm-6 panel panel-custom">
                <form class="form-signin" action="login_check" method="post" style="margin-top: 20px;">
                    {% if error %}
                        <div class="hidden-print alert alert-custom alert-danger }}" role="alert" style="margin-bottom: 20px;">
                            <table>
                                <td>
                                    <div class="alert-icon alert-icon-danger">
                                        {{ icon('alert-circled') }}
                                    </div>
                                </td>
                                <td style="padding-left: 10px;">
                                    <strong class="alert-text-danger">
                                        Error!
                                    </strong>
                                    {{ error.message }}
                                </td>
                            </table>
                        </div>
                    {% else %}
                        <div style="margin-top: 10px;"></div>
                    {% endif %}

                    <input type="text" class="form-control input-sm" name="_username" value="{{ username }}" placeholder="Email" />

                    <input type="password" class="form-control input-sm" name="_password" placeholder="Password" />

                    <button type="submit" class="btn btn-primary btn-block">
                        {{ icon('log-in') }}
                        Login
                    </button>
                    <br>
                    <a href="{{ path('collegefootball_security_create') }}">
                        Create Account
                    </a>
                </form>
                <br>
            </div>
        </div>
    </div>
{% endblock %}
