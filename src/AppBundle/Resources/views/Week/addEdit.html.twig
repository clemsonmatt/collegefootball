{% extends 'AppBundle:Week:layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-lg-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Current Weeks
                </div>
                <ul class="list-group">
                    {% for week in weeks %}
                        <li class="list-group-item">
                            <h4>
                                {{ week }}
                                <small>{{ week.startDate|date('m/d') }} &ndash; {{ week.endDate|date('m/d') }}</small>
                            </h4>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Manage Week
                </div>
                <div class="panel-body">
                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                        <div class="form-group row">
                            <label class="col-md-2 control-label">{{ form_label(form.season) }}</label>
                            <div class="col-md-10">
                                {{ form_widget(form.season, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 control-label">{{ form_label(form.number) }}</label>
                            <div class="col-md-10">
                                {{ form_widget(form.number, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 control-label">{{ form_label(form.startDate) }}</label>
                            <div class="col-md-10">
                                {{ form_widget(form.startDate, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-2 control-label">{{ form_label(form.endDate) }}</label>
                            <div class="col-md-10">
                                {{ form_widget(form.endDate, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <button class="btn btn-primary pull-right" type="submit">
                            {{ icon('checkmark') }}
                            Save
                        </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
