{% extends 'AppBundle:Security:layout.html.twig' %}

{% block content %}
    <div class="panel panel-default">
        <div class="panel-body">
            {{ form_start(form) }}
                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}
                <br>
                <button type="submit" class="btn btn-primary btn-block">
                    {{ icon('paper-airplane') }}
                    Send reset link
                </button>
            {{ form_end(form) }}
            <br>
        </div>
    </div>
{% endblock %}
